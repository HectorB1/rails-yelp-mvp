<h1>Here are the detail for <%=  @restaurant.name.capitalize %></h1>

<ul>
  <li> <%= @restaurant.name.capitalize %> </li>
   <li> <%= @restaurant.address %> </li>
   <li> <%= @restaurant.category.capitalize %> </li>
   <li> <%= @restaurant.phone_number %> </li>
</ul>

<div class="list-group">
  <h1>hello</h1>
  <% @restaurant.reviews.each do |review| %>
    <p> <%= review.content %> </p>
    <p> <%= review.rating %> </p>
    <% end %>
</div>

<p> <%= link_to 'Add a review', new_restaurant_review_path(@restaurant.id) %> </p>

<p> <%= link_to 'Back to the list of all the restaurants', restaurants_path %> </p>
<p> <%= link_to "Edit a restaurant", edit_restaurant_path(@restaurant.id) %> </p>


